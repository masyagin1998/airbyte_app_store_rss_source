{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "App Store RSS Spec",
    "description": "App Store RSS Spec schema",
    "type": "object",
    "required": [
      "app_name",
      "countries",
      "start_time"
    ],
    "additionalProperties": false,
    "properties": {
      "app_name": {
        "description": "application name",
        "type": "string",
        "examples": [
          "telegram"
        ]
      },
      "app_id": {
        "description": "application id (can be determined automatically)",
        "type": "string",
        "examples": [
          "686449807"
        ]
      },
      "countries": {
        "description": "list of necessary feedback countries",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "description": "one necessary feedback country",
          "type": "string",
          "examples": [
            "ae"
          ]
        },
        "examples": [
          [
            "ae"
          ]
        ]
      },
      "start_time": {
        "description": "start time of scraping",
        "type": "string",
        "format": "date-time",
        "examples": [
          "2016-04-10T00:27:29",
          "2021-02-11T10:56:59"
        ],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}$"
      },
      "timeout_ms": {
        "description": "timeout between requests to API",
        "type": "integer",
        "minimum": 0,
        "examples": [
          100,
          1000,
          5000
        ]
      }
    }
  }
}
